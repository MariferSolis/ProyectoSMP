@model ProyectoSMP.Models.Mantenimiento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Mantenimiento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Máquina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maquina.NombreMaquina)
        </dd>

        <dt>
            Sección
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seccion)
        </dd>

        <dt>
            Número de Operación
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroOperacion)
        </dd>
        <dt>
            Nombre de Operación
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreOperacion)
        </dd>
        <dt>
            Frecuencia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Frecuencia)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rol.Descripcion)
        </dd>

        <dt>
            Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

        <dt>
            Repuesto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventarioDeRepuestos.Nombre)
        </dd>

        <dt>
            Detalles
        </dt>

        <dd>
            @Html.DisplayNameFor(model => model.Detalles)
        </dd>

        <dt>
            URLArchivo
        </dt>

        <dd>
            @if (Model.URLArchivo != null)
            {
        @Html.ActionLink("Ver Archivo", "Descargar", new { id = Model.IdMantenimiento }) }
                    else
                    {
                        <h7>No hay Archivo</h7>
                    }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdMantenimiento }) |
    @Html.ActionLink("Regresar", "Index")
</p>
