@model ProyectoSMP.Models.Cumplimiento

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nuevo Cumplimiento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("IdCumplimiento", 0)

        <div class="item form-group">
            @Html.LabelFor(model => model.IdMantenimiento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdMantenimiento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdMantenimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(model => model.Comienza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comienza, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comienza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(model => model.Finaliza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Finaliza, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Finaliza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(model => model.Color, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="item form-group">
            <button class="btn btn-default btn-default" type="button">@Html.ActionLink("Regresar", "Index")</button>
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </div>
    }
